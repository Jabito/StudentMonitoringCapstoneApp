<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingTop="1dp"
    android:id="@+id/tlTable01">


    <TableRow
        android:background="#CCC"
        android:paddingBottom="1dp"
        android:paddingRight="1dp">
        <TextView
            android:layout_weight="1"
            android:layout_marginLeft="1dp"
            android:padding="5dp"
            android:background="#FFF"
            android:textAlignment="center"
            android:text="Date"
            android:textStyle="bold"
            android:backgroundTint="@color/yellow"
         />
        <TextView
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:background="#FFF"
            android:textAlignment="center"
            android:textStyle="bold"
            android:backgroundTint="@color/yellow"
            android:text="Time"/>
        <TextView
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:background="#FFF"
            android:textAlignment="center"
            android:textStyle="bold"
            android:backgroundTint="@color/yellow"
            android:text="Type"/>
    </TableRow>
    <TableRow
        android:background="#CCC"
        android:paddingBottom="1dp"
        android:paddingRight="1dp">
        <TextView
            android:layout_weight="1"
            android:layout_marginLeft="1dp"
            android:padding="5dp"
            android:background="#FFF"
            android:textAlignment="center"
            android:text="1/1/2017"
            android:textStyle="bold"
            />
        <TextView
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:background="#FFF"
            android:textAlignment="center"
            android:textStyle="bold"

            android:text="7:30 a.m"/>
        <TextView
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:background="#FFF"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="IN"/>
    </TableRow>
    <TableRow
        android:background="#CCC"
        android:paddingBottom="1dp"
        android:paddingRight="1dp">

        <TextView
            android:layout_weight="1"
            android:layout_marginLeft="1dp"
            android:padding="5dp"
            android:background="#FFF"
            android:textAlignment="center"
            android:text="1/1/2017"
            android:textStyle="bold"
            />
        <TextView
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:background="#FFF"
            android:textAlignment="center"
            android:textStyle="bold"

            android:text="11:00 a.m"/>
        <TextView
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:background="#FFF"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="OUT"/>
    </TableRow>
    <TableRow
        android:background="#CCC"
        android:paddingBottom="1dp"
        android:paddingRight="1dp">
        <TextView
            android:layout_weight="1"
            android:layout_marginLeft="1dp"
            android:padding="5dp"
            android:background="#FFF"
            android:textAlignment="center"
            android:text="1/2/2017"
            android:textStyle="bold"
            />
        <TextView
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:background="#FFF"
            android:textAlignment="center"
            android:textStyle="bold"

            android:text="7:30 a.m"/>
        <TextView
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:background="#FFF"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="IN"/>
    </TableRow>


</TableLayout>